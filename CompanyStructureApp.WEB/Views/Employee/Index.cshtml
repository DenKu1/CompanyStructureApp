@model IEnumerable<CompanyStructureApp.WEB.Models.EmployeeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>Select find option</h2>
<form method="get">
    <input type="hidden" name="selector" value="biggestsalary">
    <input type="submit" value="Find employees with biggest salary" />
</form>
<form method="get">
    <input type="hidden" name="selector" value="salarybigger">
    <input type="submit" value="Find employees with salary bigger" />
    <input type="text" name="arg">
</form>
<form method="get">
    <input type="hidden" name="selector" value="withsuperior">
    <input type="submit" value="Find employees with superior" />
    <input type="text" name="arg">
</form>
<form method="get">
    <input type="hidden" name="selector" value="onposition">
    <input type="submit" value="Find employees on position" />
    <input type="text" name="arg">
</form>
@if (Model is null)
{
    <h2>There is no added employees yet</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SuperiorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SuperiorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
