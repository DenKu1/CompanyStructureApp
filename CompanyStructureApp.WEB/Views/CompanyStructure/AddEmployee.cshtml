@model CompanyStructureApp.WEB.Models.EmployeeVM

@{
    ViewData["Title"] = "AddEmployee";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SuperiorId" class="control-label"></label>
                <input asp-for="SuperiorId" class="form-control" />
                <span asp-validation-for="SuperiorId" class="text-danger"></span>
                <small class="text-info ml-2">Note: Leave empty if empolyee is root</small>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </form>
    </div>
</div>



